{
  "info": {
    "name": "Sutoku",
    "type": "cui2",
    "author": [ "Yuji Suehiro" ],
    "copyright": "Yuji Suehiro",
    "version": "1.2.1",
    "develop": "2014/08/21",
    "license": "MIT License"
  },
  "command": {
    "readinfo": {
      "require": [
        "bam",
        "reference"
      ],
      "option": [
        "target",
        "clip-only",
        "cliplen",
        "outdir"
      ],
      "description": "Export read(s) to SAM format."
    },
    "depth": {
      "require": [
        "bsm",
        "reference",
        "depth-bin"
      ],
      "option": [
        "target",
        "oformat",
        "outdir"
      ],
      "description": "Export depth values."
    },
    "copynum": {
      "require": [
        "bsm",
        "reference",
        "depth-bin"
      ],
      "option": [
        "target",
        "method",
        "control",
        "oformat",
        "outdir"
      ],
      "description": "Export copy number values."
    },
    "splitread": {
      "require": [
        "bsm",
        "reference"
      ],
      "option": [
        "target",
        "control",
        "param",
        "outdir"
      ],
      "description": "Export detected split/chimeric reads."
    },
    "summary": {
      "require": [
        "bam",
        "reference"
      ],
      "option": [
        "target",
        "control",
        "param",
        "outdir",
        "async-load",
        "paired",
        "depth-bin",
        "ignore-pcrdp",
        "thread",
        "log-dir"
      ],
      "description": "Make summary file(s) of input BAM file(s)."
    },
    "integrate": {
      "require": [
        "bsm",
        "reference"
      ],
      "option": [
        "param",
        "outdir"
      ],
      "description": "Integrate multiple summary file(s) to use for variant detection or as a control data."
    },
    "vsearch": {
      "require": [
        "bsm",
        "reference"
      ],
      "option": [
        "target",
        "vcontrol",
        "param",
        "outdir",
        "oformat",
        "thread",
        "log-dir"
      ],
      "description": "Variant detection from summary file(s)."
    },
    "analyze": {
      "require": [
        "bam",
        "reference"
      ],
      "option": [
        "target",
        "control",
        "param",
        "outdir",
        "oformat",
        "prefix",
        "postfix",
        "thread",
        "log-dir"
      ],
      "description": "Sequential execution of 'summary' and 'vsearch' commands."
    },
    "unique": {
      "require": [
        "vlist",
        "reference",
        "vcontrol"
      ],
      "option": [
        "annotdb",
        "param",
        "outdir",
        "oformat",
        "log-dir"
      ],
      "description": "Select unique variants from variant list(s) by comparing control list."
    },
    "common": {
      "require": [
        "vlist",
        "reference"
      ],
      "option": [
        "annotdb",
        "param",
        "outdir",
        "oformat",
        "log-dir"
      ],
      "description": "Filter common variants listed in multiple variant lists."
    },
    "merge": {
      "require": [
        "vlist",
        "reference"
      ],
      "option": [
        "annotdb",
        "param",
        "outdir",
        "oformat",
        "log-dir"
      ],
      "description": "Merge multiple variant lists."
    },
    "template": {
      "require": [ "outdir" ],
      "option": [ "log-dir" ],
      "description": "Export template parameter file (.json)."
    }
  },
  "option": {
    "reference": {
      "short": "r",
      "brief": "file",
      "description": "Compressed reference sequence file."
    },
    "annotdb": {
      "short": "a",
      "brief": "file(.db)",
      "description": "SQLite database for gene and reported variant annotations."
    },
    "bam": {
      "short": "b",
      "brief": "input(s)",
      "description": "BAM file(s) or directory path."
    },
    "bsm": {
      "short": "s",
      "brief": "input(s)",
      "description": "File(s) or directory path of BAM's' summary data."
    },
    "vlist": {
      "short": "l",
      "description": "Path to variant list or directory."
    },
    "control": {
      "short": "c",
      "description": "Path to control BSM file."
    },
    "vcontrol": {
      "short": "C",
      "description": "Path to control variant list."
    },
    "target": {
      "short": "t",
      "brief": "file",
      "description": "List of target positions in the BED format."
    },
    "param": {
      "short": "p",
      "brief": "file",
      "description": "File path of parameters in JSON format."
    },
    "outdir": {
      "short": "o",
      "brief": "directory",
      "description": "Directory to export intermediate and/or result file(s)."
    },
    "output": {
      "short": "O",
      "brief": "name",
      "description": "File name for exporting the result(s). If you set multiple inputs, do NOT set this option. Otherwise, the results will be overwritten except for the last data."
    },
    "oformat": {
      "short": "e",
      "brief": "extension",
      "default": "auto",
      "description": "Output format. The default is 'auto' and depends on the main command."
    },
    "prefix": {
      "brief": "string",
      "description": "Prefix term to modify the result file name."
    },
    "postfix": {
      "brief": "string",
      "description": "Postfix term to modify the result file name."
    },

    "depth-bin": {
      "type": "num",
      "brief": "size",
      "description": "Binning size to count depth."
    },
    "cliplen": {
      "brief": "length",
      "description": "Minimum clip size to analyze. "
    },


    "paired": {
      "type": "bool",
      "description": "Option to analyze as a pired-end sequence (default: false). This flag can also be set in the parameter file."
    },
    "ignore-pcrdp": {
      "type": "bool",
      "description": "Option to ignore PCR duplication reads (default: false). This flag can also be set in the parameter file."
    },
    "async-load": {
      "type": "bool",
      "description": "Option to read bam file with multiple threads (default: false). This flag can also be set in the parameter file."
    },
    "clip-only": {
      "type": "bool",
      "description": "Option to select reads with clipped region (default: false)."
    },


    "thread": {
      "brief": "num",
      "description": "Maximum thread count."
    },
    "log-dir": {
      "brief": "directory",
      "description": "Output directory of log file."
    }
  }
}